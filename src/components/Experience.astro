---
import ExperienceItem from "./ExperienceItem.astro";
import { getI18N } from "@/i18n/utils";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const EXPERIENCE = [
  {
    date: i18n.EXPERIENCE_DIXBASE_DATE,
    title: i18n.EXPERIENCE_DIXBASE_TITLE,
    company: "DixBase",
    description: i18n.EXPERIENCE_DIXBASE_DESCRIPTION,
  },
  {
    date: i18n.EXPERIENCE_Z17_DATE,
    title: i18n.EXPERIENCE_Z17_TITLE,
    company: "Empresa Mixta Z17",
    description: i18n.EXPERIENCE_Z17_DESCRIPTION,
  },
];
---

<div class="relative mt-12">
  <ol class="relative space-y-8">
    {
      EXPERIENCE.map((experience, index) => (
        <li class="experience-item" style={`animation-delay: ${index * 150}ms`}>
          <ExperienceItem {...experience} />
        </li>
      ))
    }
  </ol>
</div>

<style>
  .experience-item {
    opacity: 0;
    animation: slide-in 0.6s ease-out forwards;
  }

  @keyframes slide-in {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>
