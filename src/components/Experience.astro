---
import ExperienceItem from "./ExperienceItem.astro";
import { getI18N } from "@/i18n/utils";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const EXPERIENCE = [
  {
    date: i18n.EXPERIENCE_DIXBASE_DATE,
    title: i18n.EXPERIENCE_DIXBASE_TITLE,
    company: "DixBase",
    description: i18n.EXPERIENCE_DIXBASE_DESCRIPTION,
  },
  {
    date: i18n.EXPERIENCE_Z17_DATE,
    title: i18n.EXPERIENCE_Z17_TITLE,
    company: "Empresa Mixta Z17",
    description: i18n.EXPERIENCE_Z17_DESCRIPTION,
  },
];
---

<ol class="relative mt-16">
  {
    EXPERIENCE.map((experience) => (
      <li class="">
        <ExperienceItem {...experience} />
      </li>
    ))
  }
</ol>
