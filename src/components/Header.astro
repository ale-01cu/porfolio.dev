---
import ThemeToggle from "./ThemeToggle.astro";
import LanguagePicker from "./LanguagePicker.astro";
import { getI18N } from "@/i18n/utils";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const navItems = [
  {
    title: i18n.HEADER_NAV_EXPERIENCE,
    label: "experiencia",
    url: "/#experiencia",
  },
  {
    title: i18n.HEADER_NAV_PROJECTS,
    label: "proyectos",
    url: "/#proyectos",
  },
  {
    title: i18n.HEADER_NAV_ABOUT_ME,
    label: "sobre-mi",
    url: "/#sobre-mi",
  },
  {
    title: i18n.HEADER_NAV_CONTACT,
    label: "contacto",
    url: "/#contacto",
  },
]
---

<header
  class="fixed top-0 z-50 flex items-center justify-center w-full mx-auto mt-4 px-4"
>
  <nav
    id="main-nav"
    class="flex px-4 py-2 text-sm font-medium rounded-full text-gray-600 dark:text-gray-300 justify-center items-center gap-1 border border-gray-200/50 dark:border-white/10 bg-white/70 dark:bg-gray-900/70 backdrop-blur-xl shadow-lg shadow-gray-200/20 dark:shadow-black/20"
  >
    {
      navItems.map((link) => (
        <a
          class="nav-link relative px-3 py-1.5 rounded-full transition-all duration-300 hover:text-amber-600 dark:hover:text-amber-400 hover:bg-amber-500/10"
          aria-label={link.label}
          href={link.url}
        >
          <span class="relative z-10">{link.title}</span>
        </a>
      ))
    }
    <div class="w-px h-5 bg-gray-300 dark:bg-gray-700 mx-1"></div>
    <ThemeToggle />
    <LanguagePicker />
  </nav>
</header>

<script>
  document.addEventListener("astro:page-load", () => {
    const sections = document.querySelectorAll("section")
    const navItems = document.querySelectorAll("header nav .nav-link")

    const callback = (entries: any[]) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          navItems.forEach((item) => {
            if (item.getAttribute("aria-label") == entry.target.id) {
              item.classList.add("text-amber-600", "dark:text-amber-400", "bg-amber-500/10")
            } else {
              item.classList.remove("text-amber-600", "dark:text-amber-400", "bg-amber-500/10")
            }
          })
        }
      })
    }

    const observer = new IntersectionObserver(callback, {
      root: null,
      rootMargin: "0px",
      threshold: 0.3,
    })

    sections.forEach((section) => {
      observer.observe(section)
    })

    // Cleanup function
    document.onvisibilitychange = () => {
      if (document.visibilityState === "hidden") {
        observer.disconnect()
      } else {
        sections.forEach((section) => {
          observer.observe(section)
        })
      }
    }
  })
</script>

<style>
  nav {
    animation: nav-appear 0.6s ease-out forwards;
  }

  @keyframes nav-appear {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .nav-link::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 9999px;
    opacity: 0;
    transition: opacity 0.3s ease;
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(251, 191, 36, 0.1));
  }

  .nav-link:hover::before {
    opacity: 1;
  }

  /* Active state indicator */
  .nav-link.text-amber-600::after,
  .nav-link.dark\:text-amber-400::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: currentColor;
  }
</style>
