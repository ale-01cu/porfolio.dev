---
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";
import Whatsapp from "./icons/Whatsapp.astro";
import CV from "./icons/CV.astro";
import { getI18N } from "@/i18n/utils";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const personalImageAlt = "Alejandro Figueroa Rodríguez";
---

<div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-16">
  <!-- Profile Image - visible on large screens on the left -->
  <div class="hidden lg:block relative group">
    <div class="absolute -inset-1 bg-gradient-to-r from-amber-500 via-orange-500 to-yellow-500 rounded-full blur-md opacity-50 group-hover:opacity-75 transition duration-500 animate-pulse"></div>
    <img
      class="relative rounded-full size-48 object-cover ring-4 ring-white dark:ring-gray-900 shadow-2xl"
      src="/ale.webp"
      alt={personalImageAlt}
    />
  </div>

  <!-- Content -->
  <div class="flex-1 max-w-2xl">
    <!-- Mobile profile image and badge row -->
    <div class="flex items-center gap-4 mb-6 lg:mb-8 opacity-0 animate-fade-in-up">
      <div class="relative group lg:hidden">
        <div class="absolute -inset-0.5 bg-gradient-to-r from-amber-500 to-orange-500 rounded-full blur opacity-50 group-hover:opacity-75 transition duration-500"></div>
        <img
          class="relative rounded-full size-16 object-cover ring-2 ring-white dark:ring-gray-900"
          src="/ale.webp"
          alt={personalImageAlt}
        />
      </div>
      <a
        href="https://www.linkedin.com/in/alejandro-figueroa-rodríguez-bb20562aa"
        target="_blank"
        rel="noopener"
        class="flex sm:hidden items-center transition-transform hover:scale-105"
      >
        <Badge>{i18n.HERO_BADGE}</Badge>
      </a>
    </div>

    <!-- Large screen badge -->
    <div class="hidden sm:block mb-6 opacity-0 animate-fade-in-up">
      <a
        href="https://www.linkedin.com/in/alejandro-figueroa-rodríguez-bb20562aa"
        target="_blank"
        rel="noopener"
        class="inline-flex items-center transition-transform hover:scale-105"
      >
        <Badge>{i18n.HERO_BADGE}</Badge>
      </a>
    </div>

    <!-- Heading -->
    <h1
      class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight opacity-0 animate-fade-in-up animation-delay-100"
    >
      <span class="bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900 dark:from-white dark:via-gray-100 dark:to-white bg-clip-text text-transparent">
        {i18n.HERO_GREETING}
      </span>
    </h1>

    <!-- Description -->
    <p
      class="mt-6 text-lg sm:text-xl leading-relaxed text-gray-600 dark:text-gray-400 opacity-0 animate-fade-in-up animation-delay-200"
    >
      <span class="text-gray-900 dark:text-white font-medium">{i18n.HERO_DESCRIPTION_1}</span>{" "}
      <span class="relative inline-block">
        <span class="relative z-10 font-semibold text-amber-600 dark:text-amber-400">
          {i18n.HERO_DESCRIPTION_2}
        </span>
        <span class="absolute bottom-0 left-0 w-full h-2 bg-amber-500/20 dark:bg-amber-500/30 -rotate-1"></span>
      </span>{" "}
      {i18n.HERO_DESCRIPTION_3}
    </p>

    <!-- Social Pills -->
    <nav class="flex flex-wrap gap-3 mt-8 opacity-0 animate-fade-in-up animation-delay-300">
      <SocialPill href="mailto:alejandro.figueroa.rodriguez.01@gmail.com">
        <MailIcon class="size-4" />
        {i18n.HERO_EMAIL_SOCIAL_PILL}
      </SocialPill>
      <SocialPill href="https://wa.me/55589662">
        <Whatsapp class="!size-4" />
        {i18n.HERO_WHATSAPP_SOCIAL_PILL}
      </SocialPill>
      <SocialPill href="https://www.linkedin.com/in/alejandro-figueroa-rodríguez-bb20562aa">
        <LinkedInIcon class="size-4" />
        {i18n.HERO_LINKEDIN_SOCIAL_PILL}
      </SocialPill>
      <SocialPill href={currentLocale === "es" 
        ? "/Alejandro Figueroa RodrÍguez CV.pdf" 
        : "/Alejandro Figueroa RodrÍguez CV en.pdf"
      } download>
        <CV class="size-4" />
        {i18n.HERO_CV_SOCIAL_PILL}
      </SocialPill>
    </nav>
  </div>
</div>

<!-- Decorative elements -->
<div class="absolute top-1/2 right-0 w-72 h-72 bg-amber-500/5 rounded-full blur-3xl -z-10 hidden lg:block"></div>
