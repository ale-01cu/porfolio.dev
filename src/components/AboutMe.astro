---

<article class="relative mt-12">
  <div class="flex flex-col lg:flex-row items-center lg:items-start gap-12">
    <!-- Image section -->
    <div class="relative group flex-shrink-0 order-1 lg:order-2">
      <!-- Decorative background -->
      <div class="absolute -inset-4 bg-gradient-to-br from-amber-500/20 via-orange-500/10 to-yellow-500/20 rounded-3xl blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
      
      <!-- Main image container -->
      <div class="relative">
        <!-- Decorative frame -->
        <div class="absolute -inset-2 bg-gradient-to-br from-amber-400 via-orange-500 to-yellow-500 rounded-2xl opacity-20 blur-sm"></div>
        
        <img 
          width="280" 
          height="280" 
          src="/me.jpg" 
          alt={personalImageAlt} 
          class="relative w-64 lg:w-72 aspect-square object-cover rounded-2xl shadow-2xl ring-1 ring-gray-200/50 dark:ring-gray-800/50 transform rotate-3 transition-transform duration-500 group-hover:rotate-0 group-hover:scale-105"
          style="object-position: 50% 50%"
        />
        
        <!-- Floating badge -->
        <div class="absolute -bottom-4 -right-4 bg-white dark:bg-gray-900 rounded-xl p-3 shadow-lg border border-gray-200/50 dark:border-gray-800/50 transform rotate-6 group-hover:rotate-0 transition-transform duration-500">
          <div class="flex items-center gap-2">
            <span class="text-2xl">ðŸ‡¨ðŸ‡º</span>
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">La Habana</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Content section -->
    <div class="flex-1 order-2 lg:order-1 space-y-6">
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <p class="text-gray-600 dark:text-gray-400 leading-relaxed text-lg">
          {i18n.ABOUT_ME_PARAGRAPH_1_1}
          <strong class="text-amber-600 dark:text-amber-400 font-semibold">{i18n.ABOUT_ME_PARAGRAPH_1_2}</strong>.
        </p>

        <p class="text-gray-600 dark:text-gray-400 leading-relaxed text-lg">
          {i18n.ABOUT_ME_PARAGRAPH_2_1} 
          <strong class="text-amber-600 dark:text-amber-400 font-semibold">{i18n.ABOUT_ME_PARAGRAPH_2_2}</strong> 
          {i18n.ABOUT_ME_PARAGRAPH_2_3} 
          <strong class="text-amber-600 dark:text-amber-400 font-semibold">{i18n.ABOUT_ME_PARAGRAPH_2_4}</strong>
          {i18n.ABOUT_ME_PARAGRAPH_2_5}
        </p>

        <p class="text-gray-600 dark:text-gray-400 leading-relaxed text-lg">
          {i18n.ABOUT_ME_PARAGRAPH_3_1} 
          <strong class="text-amber-600 dark:text-amber-400 font-semibold">{i18n.ABOUT_ME_PARAGRAPH_3_2}</strong>
          {i18n.ABOUT_ME_PARAGRAPH_3_3} 
          <strong class="text-amber-600 dark:text-amber-400 font-semibold">{i18n.ABOUT_ME_PARAGRAPH_3_4}</strong> 
          {i18n.ABOUT_ME_PARAGRAPH_3_5}
        </p>
      </div>

      <!-- Skills/traits badges -->
      <div class="flex flex-wrap gap-2 pt-4">
        {['Proactivo', 'Curioso', 'Remoto', 'Fullstack'].map((trait) => (
          <span class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-gray-600 dark:text-gray-400 bg-gray-100 dark:bg-gray-800 rounded-full border border-gray-200/50 dark:border-gray-700/50">
            {trait}
          </span>
        ))}
      </div>
    </div>
  </div>

  <!-- Decorative elements -->
  <div class="absolute -top-10 -left-10 w-40 h-40 bg-amber-500/5 rounded-full blur-3xl"></div>
  <div class="absolute -bottom-10 -right-10 w-60 h-60 bg-orange-500/5 rounded-full blur-3xl"></div>
</article>
