---
const { className } = Astro.props;
---

<div class={`flex flex-col gap-y-2 mb-10 ${className || ''}`}>
  <h2
    class="flex items-center text-3xl sm:text-4xl font-bold gap-x-4 text-gray-900 dark:text-white"
  >
    <span class="flex items-center justify-center p-2 rounded-xl bg-amber-500/10 text-amber-600 dark:text-amber-400 ring-1 ring-amber-500/20">
      <slot name="icon" />
      <!-- Default slot for icon if not using named slot -->
    </span>
    <span class="relative flex gap-2 items-center">
      <slot />
      <span class="absolute -bottom-2 left-0 w-full h-1 bg-gradient-to-r from-amber-500 to-amber-400 rounded-full"></span>
    </span>
  </h2>
</div>

<style>
  h2 {
    animation: fade-in-up 0.6s ease-out forwards;
  }
  
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
